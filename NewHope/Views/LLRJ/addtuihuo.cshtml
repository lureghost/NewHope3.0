
@{
    ViewBag.Title = "addtuihuo";
    Layout = "~/Views/New/Index.cshtml";
}

<h2>addtuihuo</h2>
<body class="layui-layout-body">
    <div class="layui-layout layui-layout-admin">
        <div class="layui-body">
            <!-- 内容主体区域 -->

            <ul class="">
                <li class=""><a href="">首页</a>>  <a href="">仓库作业</a>>    <a href="">退货管理</a> ><a href="">新增退货</a></li>


            </ul>

            <form class="layui-form" action="" lay-filter="example">
                <div>
                    <h3>新增退货单</h3>
                </div>


                <div class="layui-inline">
                    <div class="layui-input-inline" style="width: 200px;">
                        退货单号
                        <input type="text" name="danhao" lay-verify="title" autocomplete="off" placeholder="可不填,自动生成" readonly="readonly" class="layui-input">
                    </div>
                    <div class="layui-input-inline">
                        退货类型
                        <select name="quiz2">
                            <option value="">请选择仓库类型</option>
                            <option value="销售退货">销售退货</option>
                            <option value="采购退货">采购退货</option>


                        </select>
                    </div>

                    <div class="layui-input-inline" style="width: 200px;">
                        关联订单
                        <input type="text" name="time_max" placeholder="" autocomplete="off" class="layui-input">
                    </div>
                </div>
                <div class="layui-inline">
                    <div class="layui-input-inline" style="width: 200px;">
                        制单时间
                        <input type="text" name="time_max" placeholder="" autocomplete="off" class="layui-input">
                    </div>
                    <div class="layui-input-inline" style="width: 200px;">
                        客户编号
                        <input type="text" name="time_max" placeholder="" readonly="readonly" autocomplete="off" class="layui-input">
                    </div>
                    <div class="layui-input-inline" style="width: 200px;">
                        客户名称
                        <input type="text" name="time_max" placeholder="" readonly="readonly" autocomplete="off" class="layui-input">
                    </div>
                    </div>
                    <div class="layui-inline">
                        <div class="layui-input-inline" style="width: 200px;">
                            客户地址
                            <input type="text" name="time_max" placeholder="" readonly="readonly" autocomplete="off" class="layui-input">
                        </div>
                        <div class="layui-input-inline" style="width: 200px;">
                            客户联系方式
                            <input type="text" name="time_max" placeholder="" readonly="readonly" autocomplete="off" class="layui-input">
                        </div>
                        <div class="layui-input-inline" style="width: 200px;">
                            联系人
                            <input type="text" name="time_max" placeholder="" readonly="readonly" autocomplete="off" class="layui-input">
                        </div>
                    </div>

                    <div class="layui-inline">
                        <div class="layui-input-inline" style="width: 200px;">
                            制单人
                            <input type="text" name="time_max" placeholder="admin" autocomplete="off" class="layui-input">
                        </div>
                        <div class="layui-input-inline" style="width: 400px;">
                            备注
                            <input type="text" name="time_max" placeholder="" autocomplete="off" class="layui-input">
                        </div>
                    </div>
                    <div class="table">
                        <table class="layui-table">

                            <thead>
                                <tr>

                                    <td>&nbsp;产品编号</td>
                                    <td>&nbsp;产品条码</td>
                                    <td>&nbsp;产品名称</td>
                                    <td>&nbsp;批次</td>
                                    <td>&nbsp;库位名称</td>
                                    <td>&nbsp;出库数量</td>
                                    <td>&nbsp;退货数量</td>
                                  


                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                </tr>
                            </tbody>
                        </table>
                        <div class="layui-btn-group">
                            <button type="button" onclick="show('light')" class="layui-btn layui-btn-sm"><i class="layui-icon"></i>添加移库产品</button>
                            <button type="button" class="layui-btn layui-btn-sm"><i class="layui-icon"></i>提交</button>

                            <button type="button" class="layui-btn layui-btn-sm"><i class="layui-icon"></i>取消</button>
                        </div>
                    </div>
            </form>


            <div id="light" class="white_content">


                <div style="height:450px;">
                    <div class="layui-input-inline" style="width: 200px;">
                        产品编号： <input type="text" name="time_max" placeholder="" autocomplete="off" class="layui-input">
                    </div>
                    <table class="layui-table">
                        <thead>
                            <tr>
                                <td><input id="Checkbox1" type="checkbox" /></td>
                                <td>&nbsp;产品编号</td>
                                <td>&nbsp;产品条码</td>
                                <td>&nbsp;产品名称</td>
                                <td>&nbsp;批次</td>
                                <td>&nbsp;库位名称</td>
                                <td>&nbsp;出库数量</td>
                                <td>&nbsp;退货数量</td>

                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                            </tr>


                        </tbody>
                    </table>
                    <div style="float:right">

                        <div class="close"> <button>确定</button><button onclick="hide('light')">关闭</button> </div>
                    </div>
                </div>

            </div>


            <div id="fade" class="black_overlay"></div>

        </div>


    </div>

</body>
<script src="~/Scripts/jquery-3.4.1.js"></script>
<script>
    $(function () {

    });
    function show(tag) {
        var light = document.getElementById(tag);
        light.style.display = 'block';
        $("#fade").css('display', 'block');
    }
    function hide(tag) {
        var light = document.getElementById(tag);
        light.style.display = 'none';
        $("#fade").css('display', 'none');
    }

</script>
