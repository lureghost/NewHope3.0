<script>
    var pageIndex = 1;
    var pageSize = 4;
    var pageCount = 0;
    //分页按钮
    $(function () {
        //GetCount();
        GetAll();
        layui.use(['laypage', 'layer'], function () {
            var laypage = layui.laypage
                , layer = layui.layer;
            //完整功能
            laypage.render({
                elem: 'demo6' //ID
                , count: pageCount
                //, prev: '上一页'
                , limit: 4
                , layout: ['count', 'prev', 'page', 'next', 'limit', 'refresh', 'skip']
                , jump: function (obj) {
                    //console.log(obj)
                    //设置当前页
                    pageIndex = obj.curr;
                    //设置每页显示
                    pageSize = obj.limit;
                    GetAll();
                    //dtmeasurementQurey();
                }
            });
        });
        //$("#btnFirst").click(function () {
        //    pageIndex = 1;
        //    GetAll();
        //});
        //$("#btnBack").click(function () {
        //    pageIndex--;
