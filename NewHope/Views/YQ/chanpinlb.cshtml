        //    pageIndex++;
        //    GetAll();
        //});
        //$("#btnLast").click(function () {
        //    pageIndex = pageCount;
        //    GetAll();

        //});
    });
    //关闭新增
    function guan() {
        $("#guanbi").click(function () {
            layer.closeAll('page');
        })
    }
    //修改关闭
    function guan2() {
        $("#guanbi2").click(function () {
            layer.closeAll('page');
        })
    }
    //分页查询所有
    function GetAll() {
        $.ajax({
            type: "POST",
            async: false,
            url: "/YQ/Get_chanpinglbAll",
            data: "{pageIndex:'" + pageIndex + "',pageSize:'" + pageSize + "'}",
            dataType: "json",
            contentType: "Application/json",
            success: function (result) {
                $("#tb1 tr").remove();
                //获取总条数
                pageCount = result.PageCount;
                $.each(result.DateList, function (index, data) {
                    $("#tb1").append("<tr><td><input type='checkbox' name='checkbox' class='check' data-id='" + data.PID + "'/></td><td>" + data.PID + "</td><td>" + data.PName + "</td><td>" + data.UName + "</td><td>" + Data(data.CreationDate) + "</td><td>" + data.remark + "</td><td><input id='Button1' class='btn btn- success' type='button' value='删除'  onclick='chanpinlbdel(" + data.PID + ")'  /><button class='layui-btn layui-btn -primary layui-btn-sm' onclick='show2(" + data.PID + ")'>编辑</button></td></tr>");
                })
            },
        });
        btnButton();
    }
    //禁用
    function btnButton() {
        $("#divBtn :button").prop("disabled", false);
        if (pageIndex == 1) {
            $("#btnFirst").prop("disabled", true);
            $("#btnBack").prop("disabled", true);
        }
        if (pageIndex == pageCount) {
            $("#btnNext").prop("disabled", true);
            $("#btnLast").prop("disabled", true);
        }
    }
    //时间转换
    function Data(time) {
        var date = new Date(parseInt(time.substr(6)));
        return date.toLocaleDateString();
    }
    //条件查询
    function tjGetAll() {
        $.ajax({
            type: "POST",
            url: "/YQ/Get_chanpinlbmohucha",
            data: "{PID:'" + $("#PName").val() + "',PName:'" + $("#PName").val() + "'}", 
            //data: "{MName:'" + $("#MName").val() + "'}",
            dataType: "json",
            contentType: "Application/json",
            success: function (result) {
                $("#tb1 tr").remove();
                //获取总条数
                //pageCount = result.PageCount;
                $.each(result, function (index, data) {
                    $("#tb1").append("<tr><td><input style='display:block;' type='checkbox' /></td><td>" + data.PID + "</td><td>" + data.PName + "</td><td>" + data.UName + "</td><td>" + Data(data.CreationDate) + "</td><td>" + data.remark + "</td><td><input id='Button1' class='btn btn- success' type='button' value='删除'  onclick='Get_jiliangdanweiDel(" + data.MID + ")'  /><button class='layui-btn layui-btn -primary layui-btn-sm' onclick='show2(" + data.MID + ")'>编辑</button></td></tr>");
                })
            },
        });
    }
    //新增弹框
    function show() {

        layer.open({
            type: 1,//弹页面框
            skin: 'layui-layer-demo', //样式类名
            title: ['添加产品类别', 'font-size:18px'],//标题名 字体
            area: ['360px', '250px'],//高宽（自己调）
            shadeClose: true,//遮罩关闭
            content: $('#nb') //这里content是一个DOM，注意：最好该元素要存放在body最外层，否则可能被其它的相对元素所影响
        });
    }
    //新增产品
    function chanpinlbadd() {
        var PName = $("[name='PName']").val();
        var remark = $("[name='remark']").val();
        $.ajax({
            type: "POST",
            url: "/YQ/Get_chanpinlbAdd",
            data: "{p:{PName:'" + PName + "',remark:'" + remark + "'}}",
            dataType: "json",
            contentType: "Application/json",
            success: function (result) {
                if (result > 0) {
                    console.log();
                    alert("新增成功");
                    GetAll();
                }
                else {
                    alert("新增失败");
                }
            },
            error: function (ex) {
                alert(ex.responseText);
            }
        });
    }   

    //全选
    function quanxuan(objName, type) {
        var objNameList = document.getElementsByName(objName);
        if (null != objNameList) {
            for (var i = 0; i < objNameList.length; i++) {
                if (objNameList[i].checked == true) {
                    if (type != 'checkall') {  // 非全选
                        objNameList[i].checked = false;
                    }
                } else {
                    if (type != 'uncheckall') {  // 非取消全选
                        objNameList[i].checked = true;
                        //console.log($("input[name='checkbox']").data("id"));
                        //alert($("input[name='checkbox']").data("id"));
                      
                    }
                }
            }
        }
    }
    function you() {
        var fan = 0;
        var states2 = 1;
        var list=[]
        $.each($("[name='checkbox']"), function (index, result) {
            //alert($(this).is("checked"));
            //console.log(result);
            if ($(this).prop("checked")) {
                list.push($(this).data("id"));

            } 
        });
        $.each(list, function (index2, result2) {
           
            $.ajax({
                type: "POST",
                url: "/YQ/Get_chanpinlbDel",
                data: "{PID:" + result2 + ",state:" + states2 + "}",
                dataType: "json",
                contentType: "application/json",
                success: function (result) {
                    console.log(result);
                    if (result > 0) {
                        //alert("删除成功2");
                        GetAll();
                        fan = 1;
                    } else {
                        //alert("删除失败2");
                        fan = 0;
                    }
                },
                error: function (ex) {
                    alert(ex.responseText);
                }
            });
           
        })
        
    
    }
    //删除
    function chanpinlbdel(id) {
      
        var states = 1;
        if (confirm('确定删除?')) {
            //alert(id);
            $.ajax({
                type: "POST",
                url: "/YQ/Get_chanpinlbDel",
                data: "{PID:" + id + ",state:" + states + "}",
                dataType: "json",
                contentType: "application/json",
                success: function (result) {
                    console.log(result);
                    if (result >0) {
                        alert("删除成功");
                        
                        GetAll();
                    } else {
                        alert("删除失败");
                        
                    }
                },
                error: function (ex) {
                    alert(ex.responseText);
                }
            });
          

        }

    }    
    //修改弹框  带id查值
    function show2(PID) {
        layer.open({
            type: 1,//弹页面框
            skin: 'layui-layer-demo', //样式类名
            title: ['修改产品类别', 'font-size:18px'],//标题名 字体
            area: ['360px', '250px'],//宽高（自己调）
            shadeClose: true,//遮罩关闭
            content: $('#nb2') //这里content是一个DOM，注意：最好该元素要存放在body最外层，否则可能被其它的相对元素所影响
        });
        $.ajax({
            type: "POST",
            url: "/YQ/Get_chanpinlbById",
            data: "{PID: " + PID + "}",
            dataType: "json",
            contentType: "application/json",
            success: function (result) {
                console.log($);
                $.each(result, function (index, data) {
                    $("[name='PID2']").val(data.PID);
                    $("[name='PName2']").val(data.PName);
                    $("[name='remark2']").val(data.remark);
                })
            },
            error: function (ex) {
                alert(ex.responseText);
            }
        });
    }
    //修改
    function chanpinlbupdate() {
        var PID = $("#PID2").val();
        var PName = $("#PName2").val();
        var remark = $("#remark2").val();
        $.ajax({
            type: "POST",
            url: "/YQ/Get_chanpinlbupdate",
            data: "{p:{PID:'" + PID + "',PName:'" + PName + "',remark:'" + remark + "'}}",
            dataType: "json",
            contentType: "application/json",
            success: function (result) {
                if (result > 0) {
                    //console.log();
                    alert("修改成功");
                    GetAll();

                } else {
                    alert("修改失败");
                }
            },
            error: function (ex) {
                alert(ex.responseText);
            }
        });
    }
</script>



